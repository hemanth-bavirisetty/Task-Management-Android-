<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:clipChildren="false"
    android:layout_marginTop="28dp"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    tools:context=".taskcard">

    <!-- Task Title -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textview_border"
        android:elevation="4dp"
        android:padding="16dp"
        android:layout_margin="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="2dp"
                android:orientation="horizontal"
                android:paddingVertical="5dp">


                <TextView
                    android:id="@+id/taskTitle"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Task Title"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:fontFamily="@font/georgia"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/threeDotMenu"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Three Dot Menu (Overflow Menu) -->
                <ImageButton
                    android:id="@+id/threeDotMenu"
                    android:layout_width="30dp"
                    android:layout_height="48dp"
                    android:layout_marginStart="200dp"
                    android:background="?android:attr/selectableItemBackground"
                    android:contentDescription="Menu"
                    android:src="@drawable/baseline_more_vert_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <!-- Task Description -->
            <TextView
                android:id="@+id/taskDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Task Description"
                android:fontFamily="@font/kasepi"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/taskTitle" />

            <!-- Priority and Status -->
            <LinearLayout
                android:id="@+id/priorityStatusLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                android:paddingHorizontal="2dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/taskDescription">

                <!-- Priority -->
                <TextView
                    android:id="@+id/taskPriority"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/priority_background"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Priority"
                    android:fontFamily="@font/kasepi"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />

                <!-- Status -->
                <Spinner
                    android:id="@+id/taskStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"

                    android:background="@drawable/status_background"
                    android:entries="@array/status_options"
                    android:padding="8dp" />

            </LinearLayout>

            <!-- Deadline -->
            <TextView
                android:id="@+id/taskDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:text="Deadline"
                android:fontFamily="@font/kasepi"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/priorityStatusLayout" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>